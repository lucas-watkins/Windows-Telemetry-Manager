<Window x:Class="Windows_Telemetry_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Windows_Telemetry_Manager"
        mc:Ignorable="d"
        Title="Windows Telemetry Manager" Height="450" Width="800">
    <Grid Margin="0,0,0,-6">
        <Label Content="Telemetry Status: " HorizontalAlignment="Left" Height="26" Margin="147,102,0,0" VerticalAlignment="Top" Width="200" Name="statusLabel"/>
        <Button Content="Enable Telemetry" HorizontalAlignment="Left" Height="40" Margin="380,95,0,0" VerticalAlignment="Top" Width="140" Name="enableButton" Click="enableButton_Click"/>
        <Button Content="Disable Telemetry" Height="40" Margin="546,95,114,0" VerticalAlignment="Top" Name="disableButton" Click="disableButton_Click"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="100" VerticalAlignment="Top" Width="590" Name="telemetryBorder" Margin="0,65,0,0"/>

    </Grid>
</Window>
